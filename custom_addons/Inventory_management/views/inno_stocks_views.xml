<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_list_view" model="ir.ui.view">
        <field name="name">stocks.list.view</field>
        <field name="model">innoage.stocks</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_ids"/>
                <field name="quantity"/>
                <field name="location"/>
                <field name="received_on"/>
                <field name="per_unir_price"/>
            </tree>
        </field>
    </record>



    <record id="stock_view_kanban" model="ir.ui.view">
        <field name="name">stock.view.kanban</field>
        <field name="model">innoage.stocks</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="product_ids"/>
                <field name="quantity"/>
                <field name="location"/>
                <field name="received_on"/>
                <field name="per_unir_price"/>
            </kanban>
        </field>
    </record>>




    <record id="product_form_view" model="ir.ui.view">
        <field name="name">stocks.form.view</field>
        <field name="model">innoage.stocks</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_ids"   widget="many2many_tags"/>
                        <field name="quantity"/>
                        <field name="location"/>
                        <field name="received_on"/>
                        <field name="per_unir_price"/>

                    </group>
                    
                   

                </sheet>

                <!-- chatter -->
                <div class = "oe_chatter">
                    <field name = "message_follower_ids" groups="base.group_user"/>
                    <field name = "activity_ids"/>
                    <field name = "message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stock_search_view" model="ir.ui.view">
        <field name="name">stock.search.view</field>
        <field name="model">innoage.stocks</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_ids"/>
                <field name="quantity"/>
                <field name="location"/>
                <field name="received_on"/>
                <field name="per_unir_price"/>
            </search>
        </field>
    </record>

    <record id="stocks_action" model="ir.actions.act_window">
        <field name="name">stocks</field>
        <field name="res_model">innoage.stocks</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

   <menuitem id="innoage_stocks_submenu" action="stocks_action" parent="inventory_menu_product_menu" name="Stocks"/>

</odoo>