<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="amazon_b2b_shop_view_kanban" model="ir.ui.view">
        <field name="name">Amamzon B2b Shop Kanban View</field>
        <field name="model">amazon.b2b.shop</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"></field>
                <field name="warehouse_id"></field>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow rounded border-light mb-3">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <strong class="o_kanban_record_title"><span style="font-size: 20px;"><t t-esc="record.name.value"/></span></strong>
                                </div>
                            </div>
                            <div class="oe_kanban_details">
                                <div t-if="record.warehouse_id.value">
                                    <t t-esc="record.warehouse_id.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amazon_b2b_shop_view_form" model="ir.ui.view">
        <field name="name">Amamzon B2b Shop Form View</field>
        <field name="model">amazon.b2b.shop</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button name="process_shipping_orders" string="Export Shipping Orders" type="object" class="btn btn-primary rounded shadow"/> -->
                </header>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_amazon_b2b_sale_order" string="Import Orders" type="object" class="oe_stat_button" icon="fa-usd" >
                        </button>
                        <button name="action_view_sale_orders" type="object" string="Sale Orders"  class="oe_stat_button" icon="fa-cubes" >
                        </button>
                    </div>
                    <group>
                        <field name="name"></field>
                        <field name="shop_code"></field>
                    </group>
                    <notebook>
                        <page name="config" string="Configuration">
                            <group>
                                <field name="warehouse_id"></field>
                            </group>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>

    
</odoo>