<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cdiscount.offers form view -->
    <record id="cdiscount_offers_view_form" model="ir.ui.view">
        <field name="name">cdiscount.offers.view.form</field>
        <field name="model">cdiscount.offers</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="offer_id"/>
                            <field name="cdiscount_product_id"/>
                            <field name="product_sku"/>
                            <field name="product_id"/>
                            <field name="offer_state"/>
                            <field name="comments"/>
                            <field name="ean"/>
                            <field name="parent_product_id"/>
                            <field name="product_state"/>
                            <field name="product_condition_id"/>
                            <field name="product_condition_name"/>
                            <field name="display_name"/>
                            <field name="eco_tax"/>
                            <field name="vat_rate"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="present_in_odoo"/>
                            <field name="dea_tax"/>
                            <field name="price_must_be_aligned"/>
                            <field name="minimum_price_for_price_alignment"/>
                            <field name="best_shipping_charges"/>
                            <field name="product_packaging_unit"/>
                            <field name="product_packaging_unit_price"/>
                            <field name="product_packaging_value"/>
                            <field name="striked_price"/>
                            <field name="creation_date"/>
                            <field name="last_update_date"/>
                            <field name="cdiscount_shop_id"/>
                            <field name="stock_id"/>
                            <field name="sold_qty"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- cdiscount.offers tree view -->
    <record id="cdiscount_offers_view_tree" model="ir.ui.view">
        <field name="name">cdiscount.offers.view.tree</field>
        <field name="model">cdiscount.offers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="offer_id"/>
                <field name="product_sku"/>
                <field name="product_id"/>
                <field name="offer_state"/>
                <field name="ean"/>
                <field name="quantity"/>
                <field name="sold_qty"/>               
            </tree>
        </field>
    </record>

</odoo>