<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree -->
        <record id="view_wayfair_b2b_replenishment_tree_view" model="ir.ui.view">
            <field name="name">Wayfair B2b Replenishment</field>
            <field name="model">wayfair.b2b.replenishment</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc">
                    <field name="purchase_order"/>
                    <field name="product_number"/>
                    <field name="quantity"/>
                    <field name="source_warehouse"/>
                    <field name="destination_warehouse"/>
                    <field name="picking_id"/>
                </tree>
            </field>
        </record>
        

        <!-- Form -->
        <record id="view_wayfair_b2b_replensihment_form_view" model="ir.ui.view">
            <field name="name">Wayfair B2b Replenishment</field>
            <field name="model">wayfair.b2b.replenishment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="purchase_order"/>
                                <field name="product_number"/>
                                <field name="quantity"/>
                                <field name="item_wholesale_price_eur"/>
                                <field name="item_cube"/>
                                <field name="item_weight"/>
                                <field name="source_warehouse"/>
                                <field name="destination_warehouse"/>
                            </group>
                            <group>
                                <field name="picking_id"/>
                                <field name="product_id"/>
                                <field name="wayfair_b2b_shop_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="wayfair_b2b_replenishment_search_view_search" model="ir.ui.view">
            <field name="name">wayfair_b2b_replenishment.view.search</field>
            <field name="model">wayfair.b2b.replenishment</field>
            <field name="arch" type="xml">
                <search string="">
                    <filter name="today" string="Today" icon="terp-partner" context="{'group_by': 'create_date:day'}"/> 
                </search>
            </field>
        </record>

        <!-- Server Actions -->

        <record id="model_wayfair_b2b_replenishment_mapping" model="ir.actions.server">
            <field name="name">Map Bulk Orders</field>
            <field name="model_id" ref="wayfair_b2b_connector.model_wayfair_b2b_replenishment"/>
            <field name="binding_model_id" ref="wayfair_b2b_connector.model_wayfair_b2b_replenishment"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.map_with_bulk_order()</field>
        </record>
        
    </data>
</odoo>
    