<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- model.name inherit form view -->
    <record id="sale_order_wayfair_b2b_connector_inh_form" model="ir.ui.view">
        <field name="name">sale.order.wayfair.b2b.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="wayfair_b2b_order_number" attrs="{'invisible': [('wayfair_b2b_order_number','=',False)]}"/>
            </field>            
        </field>
    </record>

    <record model="ir.actions.server" id="action_delete_sale_orders_force">
       <field name="name">Delete Orders Forcefully</field>
       <field name="model_id" ref="model_sale_order"/>
        <field name="binding_view_types">form,list</field>
       <field name="binding_model_id" ref="model_sale_order"/>
       <field name="state">code</field>
       <field name="code">
           action = records.action_delete_sale_orders_force()
       </field>
   </record>

</odoo>
