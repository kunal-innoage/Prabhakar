<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_cdiscount_view_form" model="ir.ui.view">
        <field name="name">sale_cdiscount.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="wayfair_order_id" attrs="{'invisible': [('wayfair_order_id','=',False)]}"></field>
            </field>
            <xpath expr="//page[@name='other_information']"  position="after">
            <page name="wafair_page" string="Wayfair Tab" attrs="{'invisible': [('wayfair_order_id','=',False)]}">
                <group name="name">
                    <group name="name" >
                        <field name="wayfair_order_id"></field>
                        <field name="order_status"></field>
                        <field name="warehouse"></field>
                        <field name="delivery_country"></field>
                        <field name="wayfair_shop_id"></field>
                        <field name="wayfair_platform_order_id"></field>
                        <field name="wayfair_order_date"></field>
                        <field name="wayfair_estimated_ship_date"/>
                        <field name="label"/>
                        <field name="registered_for_shipping"/>
                        <field name="wayfair_carrier_code"/>
                    </group>
                </group>
            </page>
            
        </xpath>
        </field>
        

    </record>

    <record id="sale_order_line_inh" model="ir.ui.view">
        <field name="name">sale.order.line.inh</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"></field>
        <field name="arch" type="xml">
            <field name="qty_invoiced" position="after">
                <field name="line_id"></field>
            </field>
        </field>
    </record>


    <record model="ir.actions.server" id="action_generate_wayfair_label">
       <field name="name">Generate Wayfair Label</field>
       <field name="model_id" ref="model_sale_order"/>
        <field name="binding_view_types">form,list</field>
       <field name="binding_model_id" ref="model_sale_order"/>
       <field name="state">code</field>
       <field name="code">
           action = records.generate_wayfair_label()
       </field>
   </record>

</odoo>
