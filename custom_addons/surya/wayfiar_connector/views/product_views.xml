<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- product_product_form_inh_wayfair inherit form view -->
    <record id="product_product_form_inh_wayfair" model="ir.ui.view">
        <field name="name">product_product_form_inh_wayfair.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="wayfair_product_desc"/>
            </field>            
        </field>
    </record>

    <!-- wayfair.product.description form view -->
    <record id="wayfair_product_description_view_form" model="ir.ui.view">
        <field name="name">wayfair.product.description.view.form</field>
        <field name="model">wayfair.product.description</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="sku"/>
                        <field name="desc"/>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- wayfair.product.description tree view -->
    <record id="wayfair_product_description_view_tree" model="ir.ui.view">
        <field name="name">wayfair.product.description.view.tree</field>
        <field name="model">wayfair.product.description</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sku"/>
                <field name="desc"/> 
                <field name="odoo_product_id"/> 
            </tree>
        </field>
    </record>

    <record model="ir.actions.server" id="action_create_sale_oreders">
       <field name="name">Map Products</field>
       <field name="model_id" ref="model_wayfair_product_description"/>
        <field name="binding_view_types">form,list</field>
       <field name="binding_model_id" ref="model_wayfair_product_description"/>
       <field name="state">code</field>
       <field name="code">
           action = records.map_products()
       </field>
   </record>

</odoo>