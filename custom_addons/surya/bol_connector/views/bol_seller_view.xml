<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bol_seller_tree_view" model="ir.ui.view">
        <field name = "name">bol.seller.tree.view</field>
        <field name="model">bol.seller</field>
        <field name="arch" type="xml">
            <tree default_order = "create_date desc">
                <field name="name"/>
                <field name="warehouse_id"/>
            </tree>
        </field>
    </record>

    <record id="bol_seller_view_form" model="ir.ui.view">
        <field name="name">bol.seller.form.view</field>
        <field name="model">bol.seller</field>
        <field name="arch" type="xml">
            <form string="Seller Information">
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="warehouse_id"></field>
                        </group>
                        <group>
                            <field name = "activate"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="config" string="Configuration" groups="base.group_system">
                            <group>
                                <field name="api_key"/>
                                <field name="bol_url"/>
                            </group>
                        </page>
                        <page name = "orders" string= "Order Management" attrs="{'invisible': [('activate', '=',False)]}">
                            <group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bol_seller_view_kanban" model="ir.ui.view">
        <field name="name">bol.seller.view.kanban</field>
        <field name="model">bol.seller</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"></field>
                <field name="warehouse_id"></field>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow rounded border-light mb-3">
                            <div class="row">
                                <div class="col-6">
                                    <strong class="o_kanban_record_title">
                                        <span style="font-size: 24px;">
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-6 text-muted mb-2 text-center">
                                    <span class="text-warning">
                                        <t t-esc="record.warehouse_id.value"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>           

    <record id="action_bol_seller_form" model="ir.actions.act_window">
        <field name="name">Bol Seller</field>
        <field name="res_model">bol.seller</field>
        <field name="view_mode">kanban,form,tree</field>
    </record>

    <menuitem id="bol_root_shop" name="Bol" parent="odoo_mirakl_integration.menu_multiple_shops" action="action_bol_seller_form" sequence="101"/>
</odoo>