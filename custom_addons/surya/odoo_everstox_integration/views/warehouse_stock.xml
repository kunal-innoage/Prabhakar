<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="everstox_warehouse_stock_view_tree" model="ir.ui.view">
        <field name="name">Everstox Warehouse Stock</field>
        <field name="model">everstox.warehouse.stock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stock_id"></field>
                <field name="name"></field>
                <field name="sku"></field>
                <field name="status"></field>
                <field name="total_stock"></field>
                <field name="everstox_shop_id"></field>
                <field name="batch_product"></field>
            </tree>
        </field>
    </record>

    <record id="everstox_warehouse_stock_view_form" model="ir.ui.view">
        <field name="name">Everstox Warehouse Stock Form View</field>
        <field name="model">everstox.warehouse.stock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="stock_id"></field>
                            <field name="name"></field>
                            <field name="sku"></field>
                            <field name="status"></field>
                        </group>
                        <group>
                            <field name="everstox_shop_id"></field>
                            <field name="total_stock"></field>
                            <field name="batch_product"></field>
                        </group>
                    </group>

                    <notebook>
                        <page name="stock_items" string="Stock Items">
                            <field name="stock_item_ids">
                                <tree>
                                    <field name="stock_warehouse_name"></field>
                                    <field name="quantity"></field>
                                    <field name="updated_date"></field>
                                    <field name="stock_runway"></field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>

