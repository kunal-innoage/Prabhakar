    <record id="everstox_warehouse_stock_item_view_form" model="ir.ui.view">
        <field name="name">Everstox Warehouse Stock Item Form View</field>
        <field name="model">everstox.warehouse.stock.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="quantity"></field>
                            <field name="stock_runway"></field>
                            <field name="updated_date"></field>
                            <field name="stock_warehouse_name"></field>
                        </group>
                        <group>
                            <field name="stock_id"></field>
                        </group>
                    </group>

                    <notebook>
                        <page name="stock_quantities" string="Stock Quantities">
                            <field name="stock_quantities_ids">
                                <tree>
                                    <field name="stock_type"></field>
                                    <field name="stock_quantity"></field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="everstox_warehouse_stock_item_view_tree" model="ir.ui.view">
        <field name="name">everstox_warehouse_stock_item.view.tree</field>
        <field name="model">everstox.warehouse.stock.item</field>
        <field name="arch" type="xml">
            <tree string="Stock Items">
                <field name="stock_item_id"></field>
                <field name="quantity"></field>
                <field name="stock_runway"></field>
                <field name="updated_date"></field>
                <field name="stock_warehouse_name"></field>
            </tree>
        </field>
    </record>

    <record id="everstox_warehouse_stock_quantities_view_form" model="ir.ui.view">
        <field name="name">Everstox Stock Quantities Form View</field>
        <field name="model">everstox.stock.quantities</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="stock_type"></field>
                            <field name="stock_quantity"></field>
                        </group>
                        <group>
                            <field name="stock_item_id"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="everstox_warehouse_stock_quantities_view_tree" model="ir.ui.view">
        <field name="name">everstox_warehouse_stock_quantities.view.tree</field>
        <field name="model">everstox.stock.quantities</field>
        <field name="arch" type="xml">
            <tree string="Stock Qauntities">
                <field name="stock_type"></field>
                <field name="stock_quantity"></field>
                <field name="stock_item_id"></field>
            </tree>
        </field>
    </record>

    
