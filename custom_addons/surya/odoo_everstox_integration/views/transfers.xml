<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="everstox_transfer_view_form" model="ir.ui.view">
        <field name="name">Everstox Transfer Form View</field>
        <field name="model">everstox.transfers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="transfer_id"></field>
                            <field name="transfer_number"></field>
                            <field name="eta"></field>
                            <field name="transfer_packing_type"></field>
                            <field name="creation_date"></field>
                            <field name="updated_date"></field>
                        </group>
                        <group> 
                            <field name="state"></field>
                            <field name="purchase_order_id"/>
                            <field name="everstox_shop_id"></field>
                            <field name="source"></field>
                            <field name="destination"></field>
                            <field name="shop_id"></field>
                            <field name="custom_attributes"></field>
                        </group>
                    </group>
                    <notebook>
                        <page name="transfer_items" string="Transfer Items">
                            <field name="transfer_item_ids">
                                <tree>
                                    <field name="product_id"></field>
                                    <field name="sku"></field>
                                    <field name="quantity_announced"></field>
                                    <field name="quantity_received"></field>
                                    <field name="quantity_stocked"></field>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page name="transfer_shipment" string="Transfer Shipments">
                            <field name="transfer_shipment_ids">
                                <tree>
                                    <field name="transfer_shipment_id"></field>
                                    <field name="forwarded_to_shop"></field>
                                    <field name="shipment_received_date"></field>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="everstox_transfer_view_tree" model="ir.ui.view">
        <field name="name">everstox_transfers.view.tree</field>
        <field name="model">everstox.transfers</field>
        <field name="arch" type="xml">
            <tree string="Transfers">
                <field name="transfer_id"></field>
                <field name="transfer_number"></field>
                <field name="eta"></field>
                <field name="transfer_packing_type"></field>
                <field name="creation_date"></field>
                <field name="updated_date"></field>
                <field name="source"></field>
                <field name="destination"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>

    
    <!-- Server Actions -->

    <record id="action_get_everstox_create_transfer" model="ir.actions.server">
        <field name="name">Create Transfer</field>
        <field name="model_id" ref="odoo_everstox_integration.model_everstox_transfers"/>
        <field name="binding_model_id" ref="odoo_everstox_integration.model_everstox_transfers"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.everstox_create_transfer()</field>
    </record>

    <record id="action_get_everstox_update_transfer" model="ir.actions.server">
        <field name="name">Get Transfer Updates</field>
        <field name="model_id" ref="odoo_everstox_integration.model_everstox_transfers"/>
        <field name="binding_model_id" ref="odoo_everstox_integration.model_everstox_transfers"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.get_everstox_update_transfer()</field>
    </record>

