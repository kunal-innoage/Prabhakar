                                            <field name="backing_material"/>
                                            <field name="fringe"/>
                                            <field name="carved"/>
                                            <field name="length_of_finge_cm"/>
                                            <field name="lance"/>
                                            <field name="pile_height_mm"/>
                                            <field name="overall_thickness_backing"/>
                                            <field name="pile_type"/>
                                            <field name="loom_size_cm"/>
