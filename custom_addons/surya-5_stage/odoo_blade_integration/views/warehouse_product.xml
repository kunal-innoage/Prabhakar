<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- blade.product form view -->
    <record id="blade_procuct_view_form" model="ir.ui.view">
        <field name="name">blade.product.view.form</field>
        <field name="model">blade.product</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>                        
                        <field name="sku"/>                        
                        <field name="variation_id"/>                        
                        <field name="is_primary"/>                        
                        <field name="status"/>                        
                        <field name="create_date_at_blade"/>                        
                        <field name="date_tz"/>                        
                        <field name="blade_product_id"/>                        
                        <field name="product_channel_id"/>                        
                        <field name="prod_org_id"/>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="blade_product_view_tree" model="ir.ui.view">
        <field name="name">blade.product.view.tree</field>
        <field name="model">blade.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sku"/>                
                <field name="create_date"/>                
                <field name="write_date"/>                
            </tree>
        </field>
    </record>

</odoo>
