<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- gls.api.config form view -->
    <record id="gls_api_config_view_form" model="ir.ui.view">
        <field name="name">gls.api.config.view.form</field>
        <field name="model">gls.api.config</field>
        <field name="arch" type="xml">
            <form string="">
                <!-- <header>
                    <button name="get_token" type="object" class = 'btn-primary' string="Token"/> -->
                <!-- </header> -->
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="is_prod" widget="bs_toggle"/>
                        <field name="sb_client_id" attrs="{'invisible': [('is_prod','=',True)]}"/>
                        <field name="sb_client_secret" password="True" attrs="{'invisible': [('is_prod','=',True)]}"/>
                        <field name="sb_audience" attrs="{'invisible': [('is_prod','=',True)]}"/>
                        <field name="prod_client_id" attrs="{'invisible': [('is_prod','=',False)]}"/>
                        <field name="prod_client_secret" attrs="{'invisible': [('is_prod','=',False)]}"/>
                        <field name="prod_audience" attrs="{'invisible': [('is_prod','=',False)]}"/>
                    </group>

                    <notebook>
                        <page string="Authenticator">
                            <group>
                                <group>
                                    <field name="token_id"/>
                                </group>
                                <group>
                                    <button name="get_token" type="object" class = 'btn-primary' string="Token"/>
                                </group>
                            </group>
                        </page>
                        <page string="More Info">
                            <group>
                                <group>
                                </group>
                                <group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- gls.api.config tree view -->
    <record id="gls_api_view_tree" model="ir.ui.view">
        <field name="name">gls.api.config.view.tree</field>
        <field name="model">gls.api.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sb_client_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- model.name action window -->
    <record id="gls_api_config_action" model="ir.actions.act_window">
        <field name="name">GLS Api Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gls.api.config</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="gls_api_settings" name="GLS Api Config" parent="odoo_mirakl_integration.marketplace_settings" sequence="104" action="gls_api_config_action" groups="base.group_system" />

</odoo>