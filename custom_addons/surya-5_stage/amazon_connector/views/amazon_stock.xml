<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cdiscount_stock_view_form" model="ir.ui.view">
        <field name="name">cdiscount_stock.view.form</field>
        <field name="model">cdiscount.stock</field>
        <field name="arch" type="xml">
            <form string="" create="false" edit="false">
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <!-- <field name="isbn"></field> -->
                            <field name="sku"></field>
                            <field name="odoo_product_id"></field>
                            <field name="bar_code"></field>
                            <field name="on_shop_qty"></field>
                            <field name="ref" invisible="1"></field>
                            <field name="price"></field>
                            <field name="vat"></field>
                            <field name="on_hand_qty"></field>
                            <field name="discount"></field>
                            <field name="condition"></field>
                        </group>
                        <group>
                            <field name="eco_part_amount"></field>
                            <field name="aed_amount_france"></field>
                            <field name="private_cpy_amount"></field>
                            <field name="chemical_amount"></field>
                            <field name="low_price_allowed"></field>
                            <field name="prep_time"></field>
                            <field name="additional_facultive" invisible="1"></field>
                            <field name="principal"></field>
                            <field name="additional_facultatif"></field>
                            <field name="offer_status"></field>
                            <field name="stock_type"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cdiscount_stock_view_tree" model="ir.ui.view">
        <field name="name">cdiscount_stock.view.tree</field>
        <field name="model">cdiscount.stock</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"></field>
                <field name="bar_code"></field>
                <field name="odoo_product_id"></field>
                <field name="on_hand_qty"></field>
                <field name="on_shop_qty"></field>

            </tree>
        </field>
    </record>

</odoo>
