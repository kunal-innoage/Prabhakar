<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="amazon_seller_view_form" model="ir.ui.view">
    <field name="name">amazon.seller.form.view</field>
    <field name="model">amazon.seller</field>
    <field name="arch" type="xml">
        <form string="Seller Information">
            <header>
                <button name="process_shipping_orders" string="Export Shipping Orders" type="object" class="btn btn-primary rounded shadow"/>
                <button name="map_shop_id" string="Map Shop to orders" type="object" class="btn btn-primary rounded shadow"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_cdiscount_sale_order" string="Import Orders" type="object" class="oe_stat_button" icon="fa-usd" >
                    </button>
                    <button name="action_view_sale_orders" type="object" string="Sale Orders"  class="oe_stat_button" icon="fa-cubes" >
                    </button>
                    <button name="open_labels" string="Labels" type="object" class="oe_stat_button" icon="fa-tag"/>
                </div>
                <group>
                    <field name="name"></field>
                </group>
                <notebook>
                    <!-- <page name="orders" string="Orders"></page> -->
                    <page name="config" string="Configuration">
                        <!-- <button name="get_token" string="Get Token" type="object" /> -->
                        <!-- attrs="{'invisible': [('seller_token','!=','test_token')]}" -->
                        <group>
                            <field name="warehouse_id"></field>
                            <field name="api_login"/>
                            <field name="api_password" password="True"/>
                        <field name="seller_token" force_save="true" ></field>
                        <field name="test_token" invisible="1"></field>

                        </group>

                    </page>
                </notebook>
                
            </sheet>
        </form>
    </field>
</record>

<record id="amazon_seller_view_kanban" model="ir.ui.view">
    <field name="name">amazon_seller.view.kanban</field>
    <field name="model">amazon.seller</field>
    <field name="arch" type="xml">
        <kanban>
            <!-- <field name="state"></field> -->
            <field name="name"></field>
            <field name="seller_id"></field>
            <field name="seller_token"></field>
             <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click shadow rounded border-light">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    </strong>
                                <div t-if="record.seller_id.value">
                                        <t t-esc="record.seller_id.value"/>
                                </div>
                                    <div t-if="record.seller_token.value">
                                        <t t-esc="record.seller_token.value"/>
                                </div>
                                </div>
                            </div>
                        </t>
                    </templates>
        </kanban>
    </field>
</record>

<record id="action_amazon_seller_form" model="ir.actions.act_window" >
    <field name="name">Seller</field>
    <field name="res_model">amazon.seller</field>
    <field name="view_mode">kanban,form,tree</field>
</record>

<menuitem
    id="amazon_root_shop"
    name="Amazon"
    parent="odoo_mirakl_integration.menu_multiple_shops"
    action="action_amazon_seller_form"
    sequence="100"/>   

</odoo>
