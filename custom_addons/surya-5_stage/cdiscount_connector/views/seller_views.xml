<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="cdiscount_seller_view_form" model="ir.ui.view">
    <field name="name">cdiscount.seller.form.view</field>
    <field name="model">cdiscount.seller</field>
    <field name="arch" type="xml">
        <form string="Seller Information">
            <header>
                <button name="process_shipping_orders" string="Export Shipping Orders" type="object" class="btn btn-primary rounded shadow"/>
                <button name="get_last_days_orders" string="Yesterday Orders" type="object" class="btn btn-primary rounded shadow"/>
                <button name="update_shops_orders" string="Update Orders" type="object" class="btn btn-primary rounded shadow"/>
                <button name="cdsicount_inventory_offers" string="Map Offers" type="object" class="btn btn-primary rounded shadow"/>
                <button name="cdiscount_order_mapping" string="MAP Order Shop ID" type="object" class="btn btn-secondary rounded shadow"/>
                <button name="cdiscount_carrier_mapping" string="Carrier Mapping" type="object" class="btn btn-secondary rounded shadow"/>
            </header>
            <sheet>

                <div class="oe_button_box" name="button_box">
                    <button name="action_view_shipping_sale_order" type="object"   class="oe_stat_button w-auto" icon="fa-truck" >
                        <field name="shipping_sale_count" widget="statinfo" class="w-auto"/>
                    </button>

                    <button name="action_view_shipped_sale_order" type="object"   class="oe_stat_button w-auto" icon="fa-road" >
                        <field name="shipped_sale_count" widget="statinfo" class="w-auto"/>
                    </button>
                    <button name="action_view_sale_orders" type="object"   class="oe_stat_button w-auto" icon="fa-usd" >
                        <field name="sale_count" widget="statinfo" class="w-auto"/>
                    </button>
                    <button name="action_view_cdiscount_offers" type="object" class="oe_stat_button" icon="fa-gift" >
                        <field name="offer_count" widget="statinfo" class="w-auto"/>
                    </button>
                    <button name="action_view_cdiscount_sale_order" string="Import Orders" type="object" class="oe_stat_button" icon="fa-ship" >
                    </button>
                <button name="view_cdiscount_carriers" string="Carriers" type="object" class="oe_stat_button" icon="fa-ship"/>

                </div>
                <group>
                    <field name="name"></field>
                </group>
                <notebook>
                    <page name="order_management" string="Order Management">
                        <group>
                            <group>
                                <button name="get_orders" string="Get Orders" type="object" class="btn btn-primary rounded shadow"/>
                            </group>
                            <group>
                                <field name="is_filter_activate"></field>
                            </group>
                        </group>
                        <group string="Add Filters" attrs="{'invisible': [('is_filter_activate', '=', False)]}">
                            <group>
                                <field name="order_filter_by_state"/>
                                <!-- <field name="is_business_order"/> -->
                                <!-- <field name="is_refund_filter_activate"/>
                                <field name="refunded" attrs="{'invisible': [('is_refund_filter_activate', '=', False)]}"/>
                                <field name="refund_reason_code" attrs="{'invisible': [('is_refund_filter_activate', '=', False)]}"/> -->
                            </group>
                            <group>
                                <field name="is_date_filter_activate"/>
                                <field name="date_created_start" attrs="{'invisible': [('is_date_filter_activate', '=', False)]}"/>
                                <field name="date_created_end" attrs="{'invisible': [('is_date_filter_activate', '=', False)]}"/>
                                <field name="date_updated_start" attrs="{'invisible': [('is_date_filter_activate', '=', False)]}"/>
                                <field name="date_updated_end" attrs="{'invisible': [('is_date_filter_activate', '=', False)]}"/>
                            </group>
                        </group>
                    </page>
                    <page name="config" string="Configuration">
                        <button name="get_token" string="Get Token" type="object" />
                        <group>
                            <field name="warehouse_id"></field>
                            <field name="seller_id"></field>
                            <field name="api_login"/>
                            <field name="api_password" password="True"/>
                            <field name="seller_token" force_save="true" attrs="{'invisible': [('seller_token','!=',False)]}"></field>
                            <field name="test_token" invisible="1"></field>
                        </group>
                    </page>
                </notebook>
                
            </sheet>
        </form>
    </field>
</record>

<record id="cdiscount_seller_view_kanban" model="ir.ui.view">
    <field name="name">cdiscount_seller.view.kanban</field>
    <field name="model">cdiscount.seller</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="name"></field>
            <field name="shipping_sale_count"></field>
            <field name="shipped_sale_count"></field>
            <field name="sale_count"></field>
            <field name="offer_count"/>
             <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click shadow rounded border-light">
                                <div class="row">
                                    <div class="col-6">
                                        <strong class="o_kanban_record_title"><span style="font-size: 20px;"><t t-esc="record.name.value"/></span></strong>
                                    </div>
                                </div>
                                <div class="row mt8">
                                    
                                    <div class="col-6 text-muted mb-2">
                                        <span class="text-success float-right">Shipping : <t t-esc="record.shipping_sale_count.value"/></span>
                                    </div>
                                    <div class="col-6 text-muted mb-2">
                                        <span class="text-primary float-left">Shipped : <t t-esc="record.shipped_sale_count.value"/></span>
                                    </div>
                                    <div class="col-6 text-muted">
                                        <span class="text-info float-right">Total Orders: <t t-esc="record.sale_count.value"/></span>
                                    </div>
                                    <div class="col-6 text-muted">
                                        <span class="text-info float-right">Offers Mapped: <t t-esc="record.offer_count.value"/></span>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
        </kanban>
    </field>
</record>

<record id="action_cdiscount_seller_form" model="ir.actions.act_window" >
    <field name="name">CDiscount</field>
    <field name="res_model">cdiscount.seller</field>
    <field name="view_mode">kanban,form,tree</field>
</record>

<menuitem
    id="cdiscount_root_shop"
    name="CDiscount"
    parent="odoo_mirakl_integration.menu_multiple_shops"
    action="action_cdiscount_seller_form"
    sequence="99"/>   

</odoo>
