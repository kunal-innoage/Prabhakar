<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- cdiscount_carrier form view -->
    <record id="cdiscount_carrier_view_form" model="ir.ui.view">
        <field name="name">cdiscount_carrier.view.form</field>
        <field name="model">cdiscount.carrier</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="shop_id"/>                        
                        <field name="label"/>                        
                        <field name="code"/>                        
                        <field name="tracking_url"/>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- cdiscount_carrier tree view -->
    <record id="cdiscount_carrier_view_tree" model="ir.ui.view">
        <field name="name">cdiscount_carrier.view.tree</field>
        <field name="model">cdiscount.carrier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="shop_id"/>                        
                <field name="label"/>                        
                <field name="code"/>                        
                <field name="tracking_url"/>   
            </tree>
        </field>
    </record>

</odoo>