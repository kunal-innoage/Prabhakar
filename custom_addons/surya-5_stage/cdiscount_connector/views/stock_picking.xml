<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- stock.picking inherit form view -->
    <record id="stock_picking_inherit_form_cdisc" model="ir.ui.view">
        <field name="name">stock.picking.inherit.view.form.cdisc</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="cdiscount_shop_id" attrs="{'invisible': [('cdiscount_shop_id','=',False)]}"/>
                <field name="cdiscount_order_id" attrs="{'invisible': [('cdiscount_order_id','=',False)]}"/>
                <field name="line_count"/>
                <field name="multi_line_data_updated"/>
            </field>            
        </field>
    </record>

    <record id="view_picking_internal_search_cdiscount" model="ir.ui.view">
            <field name="name">stock.picking.search.cdiscount</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='draft']" position="before">
                    <filter string="CDiscount Deliveries" name="cdiscount_deliveries" domain="[('cdiscount_order_id', '!=', False),('shipping_tracking_url','!=', False),('state','=','assigned')]"/>
                    <filter string="Order Line Count" name="order_line_count" context="{'group_by': 'line_count'}"/>
                </xpath>
            </field>
        </record>

</odoo>
