<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bulk_inventory_update_view_form" model="ir.ui.view">
        <field name="name">bulk_inventory_update.view.form</field>
        <field name="model">bulk.inventory.update</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="market_ids" widget="many2many_tags" options="{'no_create': True}"></field>
                    </group>
                    <separator colspan="6"/>
                    <footer>
                        <button name="update_inventory_csv" type="object" string="Submit" class="oe_highlight"/>
                        <button special="cancel" string="Close" class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
