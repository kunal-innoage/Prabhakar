<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cdiscount_product_list_view" model="ir.ui.view">
        <field name="name">cdiscount.product.list.view</field>
        <field name="model">cdiscount.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_sku"/>
                <field name="price"/>
                <field name="link"/>
                <field name="status"/>
                <field name="shop_quantity"/>
                <field name="sold_quantity"/>
            </tree>
        </field>
    </record>

    <record id="cdiscount_product_form_view" model="ir.ui.view">
        <field name="name">cdiscount.product.form.view</field>
        <field name="model">cdiscount.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_sku"/>
                            <field name="price"/>
                            <field name="link"/>
                            <field name="status"/>
                            <field name="shop_quantity"/>
                            <field name="sold_quantity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cdiscount_product_search_view" model="ir.ui.view">
        <field name="name">cdiscount.product.search.view</field>
        <field name="model">cdiscount.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_sku"/>
                <field name="price"/>
                <field name="link"/>
                <field name="status"/>
                <field name="shop_quantity"/>
                <field name="sold_quantity"/>
            </search>
        </field>
    </record>


</odoo>